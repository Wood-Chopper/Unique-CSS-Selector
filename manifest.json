{
  "manifest_version": 2,
  "name": "Unique CSS Selector",
  "version": "1.0",
  "description": "Displays the unique CSS selector of a highlighted element",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
